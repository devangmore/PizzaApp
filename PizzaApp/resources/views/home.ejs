<section class="hero py-16">
    <div class="container mx-auto items-center flex justify-between">
        <div class="w-1/2 ">
          <h6 class="text-lg"><em>Are you hungry ??</em></h6>
          <h1 class="text-6xl font-bold py-4">Don't Wait....</h1>
          <button class="btn-order text-white rounded-full px-5 py-3">Yes, Order Now</button>
        </div>
        <div class="w-1/2">
          <img src="/img/hero-pizza.png" alt="">
        </div>
    </div>

</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">Our Pitzzzaaa's</h1>
    <div class="grid grid-cols-4 gap-x-12 gap-y-16">
        <%pizzas.forEach(function(pizza){ %>
            <div class="w-64">
                <img src="/img/<%= pizza.image%>"  class="h-40 mb-5 mx-auto" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizza.name%></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size%></span>
                </div>
                <div class="flex items-center mt-6 justify-around">
                    <span class="font-bold text-lg">Rs.<%= pizza.price %> </span>
                    <button  data-pizza="<%= JSON.stringify(pizza)%>"class="add-to-cart px-6 py-1 rounded-full flex items-center font-bold">
                      <span class="">+</span>
                      <span class="ml-4">Add </span>
                    </button>
                </div>
            </div>

       <% })%>
        
     
      
    </div>
</section>